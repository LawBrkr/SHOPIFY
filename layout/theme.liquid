<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="canonical" href="{{ canonical_url }}">

    <title>{{ page_title }} | Radar Viajero - Ofertas Diarias</title>
    <meta name="description" content="{{ page_description | default: 'Las mejores ofertas de viaje actualizadas cada 24 horas.' }}">

    {{ 'theme.css' | asset_url | stylesheet_tag }}
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;800&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

    {{ content_for_header }} 
    <style>
    :root {
      /* Mapeo de Colores */
      --color-primary: {{ settings.color_primary }};
      --color-accent: {{ settings.color_accent }};
      --color-bg: {{ settings.color_bg }};
      --color-text: {{ settings.color_text }};

      /* Mapeo de Fuentes (Shopify Font Loader) */
      {% assign font_heading = settings.font_heading %}
      {% assign font_body = settings.font_body %}

      {{ font_heading | font_face }}
      {{ font_body | font_face }}

      --font-heading: {{ font_heading.family }}, {{ font_heading.fallback_families }};
      --font-body: {{ font_body.family }}, {{ font_body.fallback_families }};
    }
  </style>
/head>

  <body>
    {% section 'header' %}

    <main id="MainContent" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}
    {% render 'whatsapp-float' %}

    <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>
  </body>
</html>
